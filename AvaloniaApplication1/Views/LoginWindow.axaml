<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AvaloniaApplication1.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.Views.LoginWindow"
        x:DataType="viewModels:LoginViewModel"
        Title="LoginWindow">
    
    
    <StackPanel>
        <StackPanel>
            <Label Content="Введите логин"/>
            <TextBox Text="{Binding LoginData.Username}"/>
            <Label Content="Введите пароль"/>
            <TextBox Text="{Binding LoginData.Password}" PasswordChar="*"/>
            <Button Content="Войти" Command="{Binding LoginButton}"/>
        </StackPanel>
        
        <CheckBox Content="Запомнить сессию"/>
    </StackPanel>
    </Window>